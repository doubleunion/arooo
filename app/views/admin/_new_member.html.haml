%hr
.row
  .col-md-4
    %ul.list-unstyled
      %li
        %b #{ link_to new_member.name, members_user_path(new_member) }
      %li= new_member.email
      %li
        = form_for :user, url: admin_setup_complete_path do |f|
          = f.hidden_field :id, value: new_member.id
          = f.submit "Setup Finished", class: "btn btn-primary"
  .col-md-4
    %ul.list-unstyled
      %li
        %b Approved on #{ new_member.application.processed_at? ? new_member.application.processed_at.strftime("%b %-d") : '---' }
      %li
        - if new_member.email_for_google
          %b Google email:
          = new_member.email_for_google
        - else
          .admin-warning
            No Google email
      %li
        - if new_member.last_stripe_charge_succeeded or new_member.scholarship_since?
          Stripe charge succeeded OR Scholarship approved
        - else
          .admin-warning
            Dues Not Set Up or Waiting on Scholarship
  .col-md-4
    = form_for :user, url: admin_save_membership_note_path do |f|
      = f.hidden_field :id, value: new_member.id
      = f.text_area :membership_note, rows: 4, cols: 35, value: new_member.membership_note
      = f.submit "Save Note", class: "btn"
